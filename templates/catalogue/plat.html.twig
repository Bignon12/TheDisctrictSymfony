{% extends 'base.html.twig' %}

{% block title %}Page Plat{% endblock %}

{% block body %}
<div class = "bod">
<section>
    <div class="re"></div>  

    <div>
        <h1 class="text-center mt-4">Voici nos différents plats</h1>
    </div>

    <div id="aff" class="row d-flex justify-content-around mx-auto">
        {% for element in plat %}
        <div class= "row col-2 m-4" >
            <div class="card" style= "w-25 mx-1">
                <img src="images_the_district/food/{{ element.image }}" class="img-fluid cover rounded-start" alt="{{ element.libelle }}">
                <div class="card-body">
                    <h3 class="card-text text-center" value = {{element.id}}{{element.libelle}}>{{ element.libelle }}</h3>
                    <p>{{element.description}}</p>
                    <p>{{element.prix}}€</p>
                    <a href="{{ path('ajout_panier',{'id': element.id }) }}">
                        <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-cart-dash" viewBox="0 0 16 16">
                            <path d="M6.5 7a.5.5 0 0 0 0 1h4a.5.5 0 0 0 0-1z"/>
                            <path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1zm3.915 10L3.102 4h10.796l-1.313 7zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0m7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0"/>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</section>
   
<section>
    <div class="d-grid gap-2 d-md-flex justify-content-md-around">
        <a href="{{ path('app_catalogue_categorie') }}" class="btn btn-primary" type="button">Précédent</a>
        <a href="{{ path('app_catalogue_plat') }}" class="btn btn-primary" type="button">Suivant</a>
    </div>
</section> 
</div>
{% endblock %}
