    <section class="text-center ck mx-auto">
        <h1>Voici nos cat√©gories de plats populaires</h1>
        <div class="row d-flex justify-content-around mx-auto">

            {% for element in categorie %}
                <div class="row col-3 m-5">
                    <div class="card" style="width: 25rem;">
                        <img src="images_the_district/category/{{ element.image }}" class="img-fluid cover rounded-start" alt="{{ element.libelle }}">
                        <div class="card-body">
                            <h3 class="card-text text-center">{{ element.libelle }}</h3>
