{% extends 'base.html.twig' %}

{% block body %}

<div class = "container">
    <div>
        <h1 class="text-center mt-4">Voici les plats de cette catégorie</h1>
    </div>

    <div id="aff" class="row d-flex justify-content-around mx-auto">
        {% for element in plat %}
        <div class= "row col-2 m-4" >
            <div class="card" style= "w-25 mx-1">
                <img src= "{{ asset('images_the_district/food/' ~ element.image) }}" class="img-fluid cover rounded-start" alt="{{ element.libelle }}">
                <div class="card-body">
                    <h3 class="card-text text-center" value = {{element.id}}{{element.libelle}}>{{ element.libelle }}</h3>
                    <p>{{element.description}}</p>
                    <p>{{element.prix}}€</p>
                    <a href="{{ path('app_catalogue',{'id': element.id }) }}"  class="btn btn-primary">Commander</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}